doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/products.css")
    body
        header.main-header
            nav.main-header-nav
                ul.main-header-item-list
                    li.main-header-items
                        a.active(href="/") Shop
                    li.main-header-items
                        a(href="/admin/add-product") Add

        main
            form(actions="/admin/add-product", method="POST").product-form
                section
                    label(for="title") Title
                    input(type="text", name="title", id="title")
                    button(type="submit") Add Product